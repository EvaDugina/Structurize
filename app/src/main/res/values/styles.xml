<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackBack</item>
        <item name="colorPrimaryDark">@color/colorTextButtonRegistration</item>
        <item name="colorAccent">@color/colorTextButtonRegistration</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonThemeSettings" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_theme_transparent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

</resources>

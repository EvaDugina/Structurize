<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.blabla.structurize.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:background="@drawable/back_1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_background"
            android:alpha="0.75">

            <EditText
                android:id="@+id/content_login_edit_text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBack"
                android:hint="Email"
                android:textColorHint="@color/colorBack"
                />

            <EditText
                android:id="@+id/content_login_edit_text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/colorBack"
                android:hint="Password"
                android:textColorHint="@color/colorBack"
                />
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content_login_text_view_text_failure"
        android:textColor="@android:color/holo_red_dark"/>

    <Button
        android:id="@+id/content_login_button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_shape_registration"
        android:textColor="@color/colorBack"
        android:text="LOG IN"
        android:textSize="20dp"
        android:alpha="0.75"/>


    <Button
        android:id="@+id/content_login_button_to_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/colorBack"
        android:text="SIGN UP" />

    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.blabla.structurize.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/content_settings_profile_image"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginTop="25dp"
        android:src="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/content_settings_button_change_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHANGE DATA"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorTextButtonRegistration"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBackBack"/>

    <Button
        android:id="@+id/content_settings_button_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOG OUT"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorTextButtonRegistration"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBackBack"/>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddTaskActivity"
    tools:showIn="@layout/activity_add_task">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/content_add_task_text_input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task name">

        <EditText
            android:id="@+id/content_add_task_edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="textPersonName"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/content_add_task_text_input_layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task description">

        <EditText
            android:id="@+id/content_add_task_edit_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="text"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/content_add_task_text_input_layout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task date">

        <EditText
            android:id="@+id/content_add_task_edit_text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="date"/>
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/content_add_task_spinner_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Task category"></Spinner>

    <Button
        android:id="@+id/content_add_task_button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorBackBack"
        android:text="SUBMIT"
        android:textColor="@color/colorBack" />
</LinearLayout>